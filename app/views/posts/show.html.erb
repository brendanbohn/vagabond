<h4><%= @post.city %></h4>
<h3><%= @post.title %></h3>
<p><%= @post.content %></p>
<p><%= @author.username %></p>

<% if @post.user_id == current_user.id %>
	<span class="pull-right">
    <!-- button with edit modal in -->
		<%= link_to 'Edit', edit_post_path, class: 'btn btn-primary'%>
	</span>
<% end %>




