<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for @post do |f| %>
      <!-- error message -->
      <% if @post_edit_error %>
        <div class="alert alert-info text-center alert-danger"><%= flash[:error] %></div>
      <% end %>
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control", placeholder: 'Title', autofocus: true %>
      <%= f.label :content %>
      <%= f.text_area :content, class: "form-control", placeholder: 'Content' %>
      <br>
      <%= f.label :city %>
      <%= f.select :city, ['San Francisco', 'London', 'Tokyo'], :selected => "San Francisco", class: "form-control btn-group" %>
      <br>
      <!-- button with delete modal in -->
      <%= link_to 'Delete', '#', class: 'btn btn-danger', data: {toggle: "modal", target: "#delete-modal"}  %>  
      <span class="pull-right">
        <%= f.submit 'Submit', value: "Submit", class: "btn btn-primary" %> 
      </span>
    <% end %>
  </div>
</div>

<div class="modal fade" id="delete-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Confirm Delete Request</h4>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this post?</p>
        <p>This action cannot be undone.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <%= link_to 'Delete Post', post_path, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>