<div class="container">
	<div class="col-sm-8 col-sm-offset-2">
		<div class="well">	
			<h2 class="text-center">New Post</h2>
			<%= form_for @post do |f| %>
				<%= f.label :title %>
				<%= f.text_field :title, class: "form-control", placeholder: 'Title', autofocus: true %>
				<br>
				<%= f.label :content %>
				<%= f.text_area :content, class: "form-control", placeholder: 'Content', size: "40x10" %>
				<br>
				<%= f.label :city %>
				<select class='form-control'>
					<option>San Francisco</option>
					<option>London</option>
					<option>Sapporo</option>
				</select>
				<br>
				<div class="text-right">
					<%= f.submit 'post', value: "Post!", class: "btn btn-primary" %>
				</div>
			<% end %>
		</div>
	</div>
</div>
