<div class="container">
	<div class="col-sm-4 col-sm-offset-4 text-center">
		<% flash.each do |name, msg| %>
		  <%= content_tag :div, msg, class: "alert #{name == 'error' ? 'alert-danger' : 'alert-notice'}" %>
		<% end %>
	</div>
</div>

<div class="container">
	<div class="col-sm-8 col-sm-offset-2">
		<div class="well">	
			<h2 class="text-center">New Post</h2>
			<% if flash[:error] %>
			  <div class="alert alert-info"><%= flash[:error] %></div>
			<% end %>
			<%= form_for @post do |f| %>
				<%= f.label :title %>
				<%= f.text_field :title, class: "form-control", placeholder: 'Title', autofocus: true %>
				<br>
				<%= f.label :content %>
				<%= f.text_area :content, class: "form-control", placeholder: 'Content', size: "40x10" %>
				<br>
				<%= f.label :city %>
				<br>
				<%= f.select :city, ['San Francisco', 'London', 'Tokyo'], :selected => "San Francisco", class: "form-control dropdown-menu" %>
				<br>
				<div class="text-right">
					<%= f.submit 'post', value: "Post!", class: "btn btn-primary" %>
				</div>
			<% end %>
		</div>
	</div>
</div>
