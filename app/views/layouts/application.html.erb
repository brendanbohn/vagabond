<!DOCTYPE html>
<html>
<head>
  <title>TravelGems</title>
  <!-- images to grayscale cdn --> 
  <link href="//cdn.jsdelivr.net/jquery.gray/1.4.5/gray.min.css" rel="stylesheet">
  <!-- Google Maps API -->
  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCgXVtqnJYdNwT8U3s17i3hIRQoqE-17jA&libraries=places"></script>
<!-- This line is here so that the javascript files load on redirect within site -->
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<!-- render navbar -->
<%= render "layouts/navbar" %>
<!-- include error messages -->
<div class="container">
  <div class="col-sm-4 col-sm-offset-4 text-center">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: "alert #{name == 'error' ? 'alert-danger' : 'alert-notice'}" %>
    <% end %>
  </div>
</div>
<!-- include signup and login modals on all pages -->
<%= render "layouts/signup_login_modals" %>

<!-- Flash Messages -->
<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
    <%= bootstrap_flash %>
  </div>
</div>

<%= yield %>

<!-- Images to grayscale cdn for welcome#index-->
<script src="//cdn.jsdelivr.net/jquery.gray/1.4.5/jquery.gray.min.js"></script>
</body>
</html>